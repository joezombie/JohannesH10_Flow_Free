<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="40sp"
            android:layout_centerHorizontal="true"/>
    <Button
            android:id="@+id/continue_from_last"
            android:onClick="continueFromLast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_continue_from_last"
            android:layout_below="@+id/title"
            android:textStyle="bold"
            style="@android:style/TextAppearance.DeviceDefault.Large"/>
    <Button
            android:id="@+id/play"
            android:onClick="selectBoard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_play"
            android:layout_below="@+id/continue_from_last"
            android:textStyle="bold"
            style="@android:style/TextAppearance.DeviceDefault.Large"/>
    <Button
            android:id="@+id/time_trial"
            android:onClick="selectBoardTimeTrial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_time_trial"
            android:layout_below="@+id/play"
            android:textStyle="bold"
            style="@android:style/TextAppearance.DeviceDefault.Large"/>
    <Button
            android:id="@+id/settings"
            android:onClick="settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_settings"
            android:layout_below="@+id/time_trial"
            android:textStyle="bold"
            style="@android:style/TextAppearance.DeviceDefault.Large"/>


</RelativeLayout>

