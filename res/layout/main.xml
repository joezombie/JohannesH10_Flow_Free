<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flow Free"
            android:textSize="40dp"
            android:layout_centerHorizontal="true"/>
    <Button
            android:id="@+id/continue_from_last"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue from last"
            android:layout_below="@+id/title"
            android:textStyle="bold"
            android:textSize="20dp"/>
    <Button
            android:id="@+id/play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play"
            android:layout_below="@+id/continue_from_last"
            android:textStyle="bold"
            android:textSize="20dp"/>
    <Button
            android:id="@+id/time_trial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time trial"
            android:layout_below="@+id/play"
            android:textStyle="bold"
            android:textSize="20dp"/>
    <Button
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:layout_below="@+id/time_trial"
            android:textStyle="bold"
            android:textSize="20dp"/>


</RelativeLayout>

